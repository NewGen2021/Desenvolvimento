{% extends 'gere/template1/base_admin.html' %}
{% load static %}
{% load i18n %}
{% load mathfilters %}
{% load hosts %}
{% load crispy_forms_tags %}

{% block title %}{% translate "Edição de tipo espaço" %}{% endblock %}

{% block css %}

<style>
    #img_tipo {
    height: auto; 
    width: auto; 
    max-width: 600px; 
    max-height: 600px;
    }
    small {
    display: none;
    }
    input:hover + small {
        display: block;
    }
    .form-check:hover + small {
        display: block;
    }
</style>
{% endblock %}

{% block content %}
<section id="tabs" class="project-tab">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">{% translate "Alterar tipo de espaço" %}</h1>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if nao_existe %}
                <div class="alert alert-danger alert-dismissible fade show">
                    <strong>{% translate "ERRO!" %}</strong> {% translate "Não foi possível encontrar esse tipo de espaço, volte à tela de listar espaços e selecione ou crie um válido!" %}
                </div>
                <a role="button" class="btn btn-outline-primary" href="{% host_url 'listar_espacos' host 'custom_host' domain %}?tipo_espaco=1?page=1">{% translate "← Voltar" %}</a>
                {% else %}
                
                {% if imagem %}
                <img div="imagem_layout_cima">
                {% endif %}
                <form method="POST" class="form-group" name="formFuncionario" enctype="multipart/form-data">
                    {% csrf_token %}
                    <div class="form-row">
                        <div class="form-group">
                          {{ form.nome|as_crispy_field }}
                          <small class="form-text text-muted">
                            {% translate "Coloque um nome para um tipo de espaço." %}
                            <!-- {% translate " Exemplos: Sala Compartilhada, Sala de Reunião." %} -->
                          </small>
                        </div>
                    </div>
                    <hr>
                    <div class="form-row">
                        <div class="form-group">
                            {{ form.descricao|as_crispy_field }}
                            <small class="form-text text-muted">
                                {% translate "Defina uma descrição para este tipo de espaço." %}
                                <!-- {% translate "Exemplo: Uma sala privada para você e seus convidados desfrutarem de privacidade e equipamentos profissionais de reunião." %} -->
                            </small>
                        </div>
                    </div>
                    <hr>
                    <div class="form-row">
                        <div class="form-group">
                            {{ form.preco|as_crispy_field }}
                            <small class="form-text text-muted">
                                {% translate "Defina um preço padrão para salas desse tipo de espaço." %}
                            </small>
                        </div>
                    </div>
                    <hr>
                    <div class="form-row">
                        <div class="form-group">
                            {{ form.tempo_limpeza|as_crispy_field }}
                            <small class="form-text text-muted">
                                {% translate "O sistema entende que existe um intervalo para limpeza de um determinado espaço que entra em consideração na hora das reservas das salas. " %}
                                {% translate "Selecione aqui a quantidade de intervalo que este espaço precisa depois de ser usado antes de ficar pronto novamente ao próximo cliente. " %}
                                <strong>{% translate "Colocar no formato (hora, minuto, segundo)" %}</strong>
                            </small>
                        </div>
                    </div>
                    <hr>
                    <div class="form-row">
                        <div class="form-group">
                            {{ form.compartilhado|as_crispy_field }}
                            <small class="form-text text-muted">
                                {% translate "Espaços compartilhados entram na lógica de 'vagas' por espaço, enquanto um espaço compartilhado só permite uma vaga a ser reservada em um momento." %}
                                {% translate "Eles permitem clientes desconhecidos alugarem aquele mesmo espaço durante um determinado período. Selecione para marcar este espaço como compartilhado." %}
                            </small>
                        </div>
                    </div>
                    <hr>
                    <div class="form-row">
                        <div class="form-group">
                            {{ form.imagem|as_crispy_field }}
                            <small class="form-text text-muted">
                                {% translate "Selecione a imagem a ser mostrada para o cliente quando ele for selecionar um tipo de espaço para escolher." %}
                            </small>
                        </div>
                        <hr>
                        <div>
                            <h3 style="text-align: center;">{% translate "Imagem atual" %}</h3>
                            <div style="text-align: center;">
                                <div id="image_field"></div> <br>
                            </div>
                        </div>
                    </div>
                    <hr>
    
                  <!-- {% csrf_token %}
                  {{ form|crispy }} -->
                  
                  <div class="d-flex flex-row">
                    <a role="button" class="btn btn-outline-primary" href="{% host_url 'listar_espacos' host 'custom_host' domain %}?tipo_espaco=1?page=1">{% translate "← Voltar" %}</a>
                    <button type="submit" id="form-checkout__submit" class="btn btn-primary" style="margin-left: 2%;">{% translate "Salvar" %}</button>
                </div>
    
                {% if messages %}
                <div class="alert alert-warning">
                    {% for m in messages %}
                    <p {% if message.tags %} class="{{ message.tags }}" {% endif %}>{{ m }}</p>
                    {% endfor %}
                </div>
                {% endif %}
                  
                </form>
                {% endif %}
                
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block js %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
<script>
    // Reajusta itens para dentro da div form gerada pelo django
    $( document ).ready(function() {
        var smalls = document.getElementsByTagName('small');
        const array_smalls = Array.from(smalls);
        for (let item of array_smalls) {
            form_div = item.parentNode.children[0].children[1]
            form_div = form_div ? form_div : item.parentNode.children[0]
            form_div.insertAdjacentElement('beforeend', item)
        }
    });

    let image_field = document.getElementById('image_field') // form > image field
    let load_image = document.createElement('img')

    load_image.setAttribute('src', "/media/{{imagem}}")
    if ("{{imagem}}"!="")
    load_image.setAttribute('alt', "Image Atual")
    else
    load_image.setAttribute('alt', "Não definida")
    load_image.setAttribute('id', "img_tipo")
    image_field.parentNode.insertBefore(load_image, image_field.nextSibling)

    let compartilhado_field = document.getElementById('id_compartilhado')
    if ("{{compartilhado}}"=="0"){
        compartilhado_field.value = 0
        compartilhado_field.removeAttribute('checked')
    }
    else
        compartilhado_field.value = 1
        // compartilhado_field.setAttribute('checked')

document.getElementById('id_imagem').onchange = function() {
    // fire the upload here
    document.getElementById('img_tipo') = input.value;
};
</script>
{% endblock %}