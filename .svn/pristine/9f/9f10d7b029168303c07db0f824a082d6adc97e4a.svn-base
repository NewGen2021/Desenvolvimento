{% extends 'cria/base.html' %}
{% load static %}
{% load i18n %}

{% block title %}{% translate "Cadastro de Informações" %}{% endblock %}

{% load crispy_forms_tags %}

{% block css %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"/>
<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link rel="stylesheet" href="{% static 'css/style.css' %}"/>
{% endblock css %}

{% block content %}

<section>
  <div class="container-fluid">

      <div class="topRegister">
          <h1>{% translate "Criar uma conta" %}</h1>    
      </div>
      
      <div id="BodyRegister">
        <form method="POST" class="form-group" id="formulario">
          {% csrf_token %}
          {{ administradorForm|crispy }}
          <button type="submit" class="btn btn-primary" id="enviar_form_administrador">{% translate "Registrar" %}</button>           
        </form>
      </div>
  </div>
</section>
{% endblock content %}

{% block js %}

<!-- Mask JS Files -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>

<script>
  let botao = document.getElementById('enviar_form_administrador');
  botao.onclick = function(){
    let input_senha = document.getElementById('input_senha');
    if(input_senha.value.length < 8){
      alert('{% translate "Insira uma senha com pelo menos 8 caracteres" %}');
      input_senha.focus();
    }
    else
    document.getElementById('formulario').submit();
    

  };
  // el.addEventListener("click", modifyText, false);
</script>

<!-- Cep validator -->
<script src="{% static 'js/cep_verifier.js' %}"></script>

{% endblock js %}
