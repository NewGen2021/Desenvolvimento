{% extends 'gere/template1/base_admin.html' %}
{% load static %}
{% load i18n %}

{% block title %}{% translate "Cadastrar tipo espaço" %}{% endblock %}

{% load crispy_forms_tags %}

{% block css %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"/>
<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link rel="stylesheet" href="{% static 'css/style.css' %}"/>
{% endblock css %}

{% block content %}
<section>
    <div class="container-fluid">

        <div class="topRegister">
            <h1>{% translate "Criação de tipo de espaço" %}</h1>    
        </div>

        <div id="BodyRegister">

            <form method="POST" class="form-group" name="formFuncionario" enctype="multipart/form-data">
                {% csrf_token %}
                <div class="form-row">
                    <div class="form-group col-md-12 mb-0">
                      {{ form.nome|as_crispy_field }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12 mb-0">
                        {{ form.descricao|as_crispy_field }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6 mb-0">
                        {{ form.preco|as_crispy_field }}
                    </div>
                    <div class="form-group col-md-6 mb-0">
                        {{ form.tempo_limpeza|as_crispy_field }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6 mb-0">
                        {{ form.compartilhado|as_crispy_field }}
                    </div>
                    <div class="form-group col-md-6 mb-0">
                        {{ form.imagem|as_crispy_field }}
                    </div>
                </div>

              <!-- {% csrf_token %}
              {{ form|crispy }} -->
              
              <button type="submit" id="enviar_form_funcionario" class="btn btn-primary">{% translate "Criar tipo de espaço" %}</button>

            {% if messages %}
            <div class="alert alert-warning">
                {% for m in messages %}
                <p {% if message.tags %} class="{{ message.tags }}" {% endif %}>{{ m }}</p>
                {% endfor %}
            </div>
            {% endif %}
              
            </form>
            </div>
        </div>

    </div>
</section>
{% endblock content %}

{% block js %}

<!-- Mask JS Files -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>

<!-- Cep validator -->
<script src="{% static 'js/cep_verifier.js' %}"></script>

{% endblock js %}

